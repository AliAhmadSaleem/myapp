<%= Time.now%>
<%= form_for @story do |f| %>
  <label>Name:</label>           <%= f.text_field :name %><br />
  <label>Description : </label>  <%= f.text_field :description %><br />
  <label>Link URL : </label>     <%= f.text_field :link %><br />
  <label>Status   : </label>     <%= f.check_box :isposted %><br />
  <%= f.submit %> 
<% end %>
<%= link_to 'Back', stories_path %>